{
  "tasks": {
    "dev": "deno run --watch main.js",
    "compile": "deno compile --allow-net --allow-env --allow-read --allow-write main.js && ./word-source-cli.exe",
    "compile-all": "deno compile -A --target x86_64-pc-windows-msvc --output WordSourceManager-Windows main.js  & deno compile -A --target x86_64-apple-darwin --output WordSourceManager-apple-x86 main.js & deno compile -A --target x86_64-unknown-linux-gnu --output WordSourceManager-Linux main.js & deno compile -A --target aarch64-apple-darwin --output WordSourceManager-apple-aarch main.js",
    "run": "deno run -A .main.js",
    "check": "deno fmt && deno lint && deno test"
  }
}
