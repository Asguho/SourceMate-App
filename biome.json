{
	"$schema": "https://biomejs.dev/schemas/1.8.3/schema.json",
	"organizeImports": {
		"enabled": true
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true
		}
	},
	"formatter": {
		"enabled": true,
		"lineWidth": 140
	},
	"overrides": [
      {
        "include": ["*.svelte", "*.astro", "*.vue"],
        "linter": {
          "rules": {
            "style": {
              "useConst": "off",
              "useImportType": "off"
            }
          }
        }
      }
    ]
}
